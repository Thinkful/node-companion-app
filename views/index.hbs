<h1>My Inventory <a class="add contain" href="new">+</a></h1>

<div class="content">
	<ul class="items">
	{{#each items}}
		<li>
			<div class="actions">
				<a href="{{_id}}/edit" class="edit button">edit</a>
				<span data-id="{{_id}}" class="delete">&times;</span>
			</div>
			<a href="{{_id}}">
				<div class="info">
					<header class="name">{{name}}</header>
					<p class="description">{{description}}</p>
				</div>
			</a>
		</li>
	{{/each}}
	</ul>
</div>
